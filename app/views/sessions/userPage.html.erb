<div class="body">
    <div class = "top">
        <div class = "home"><a href = "/">HOME</a></div>
        <div class = "signIn-signUp">
            <%= link_to 'sign-up', blogout_main_signup_path  %>
        </div>
        <div class = "signout">
            <%= link_to 'Sign Out', blogout_main_home_path %>
        </div>
    </div>
    <div class = "new-post">
        <%= link_to 'New Post',sessions_post_path %>
    </div>
    
    <% Blog.all.each do |post|%>
        <div class = "all-posts">
            <br><%= link_to post.title, controller: "blog", action: "show", id: post.id%>
            <br> by <%=post.user.name%>
        </div>
    <% end %>
    
</div>
